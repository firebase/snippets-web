{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2022": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": ["error", "always"],
        "arrow-spacing": ["error"],
        "no-const-assign": ["error"],
        "prefer-const": ["error"],
        "prefer-arrow-callback": ["error"],
        "spaced-comment": ["error", "always"],
        "semi": ["error", "always"]
    }
}
